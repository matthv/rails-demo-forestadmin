<br /><br /><br />
<div class="product">
    <%= link_to product.label, product_path(product) %>
    <div class="product__actions">
        <%= button_to "Delete",
                      product_path(product),
                      method: :delete,
                      class: "btn btn--light" %>
        <%= link_to "Edit",
                    edit_product_path(product),
                    class: "btn btn--light" %>
    </div>
</div>
