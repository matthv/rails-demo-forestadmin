<%= form_with model: @product do |f| %>
    <% if product.errors.any? %>
        <div class="error-message">
            <%= product.errors.full_messages.to_sentence.capitalize %>
        </div>
    <% end %>

    <%= f.label :label %>
    <%= f.text_field :label %>
    <br />
    <%= f.label :price %>
    <%= f.number_field :price %>
    <br />
    <%= f.label :file %>
    <%= f.file_field :file %>
    <br />
    <%= f.submit class: "btn btn--secondary" %>
<% end %>
